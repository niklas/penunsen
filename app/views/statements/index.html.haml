%h2= account.number

= simple_form_for @search, :url => account_statements_path(account), :method => :get do |search|
  = search.input :before, :required => false
  = search.input :after, :required => false
  = search.button :submit

#plot

%table.statements
  %thead
    %tr
      %th Amount
      %th Entry date
      %th Info
  %tbody
    - balance = 0
    - collection.each do |s|
      - balance += s.amount_with_sign
      %tr{:class => dom_id(s), :data => { :balance => balance, :entered_at => s.entered_at.to_s(:db) }}
        %td.amount{:class => s.funds_code}= amount_tag s.amount_with_sign
        %td.entered_on= s.entered_on
        - if s.account_holder.present?
          %td.name= s.account_holder
        - else
          %td.details= s.details
