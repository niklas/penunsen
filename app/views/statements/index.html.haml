%h2= account.number

%table.statements
  %thead
    %tr
      %th Amount
      %th Entry date
      %th Info
  %tbody
    - account.statements.each do |s|
      %tr
        %td.amount{:class => s.funds_code}= amount_tag s.amount_with_sign
        %td.entered_on= s.entered_on
        - if s.account_holder.present?
          %td.name= s.account_holder
        - else
          %td.details= s.details
